<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_test"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="显示本地图"
            android:id="@+id/but_local_pic"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="显示网络图"
            android:id="@+id/but_net_pic"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="缓存信息"
            android:id="@+id/but_cache"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="权限"
            android:id="@+id/but_perm"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="MD5加密"
            android:id="@+id/but_md5"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="存储本地列表"
            android:id="@+id/but_sp_list"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="日期测试"
            android:id="@+id/but_test_date"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="拼音测试"
            android:id="@+id/but_pinyin"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="文件相关测试"
            android:id="@+id/but_file"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/text_view_info"
        android:layout_weight="1"
        android:scrollbarStyle="insideOverlay"
        android:fadeScrollbars="false"
        android:layout_margin="4dp"
        android:padding="2dp"
        android:background="#dcdbdb"
        android:layout_width="match_parent"
        android:scrollbarFadeDuration="2000"
        android:layout_height="0dp"/>
</LinearLayout>
